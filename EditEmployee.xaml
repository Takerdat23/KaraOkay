<Window x:Class="Wpf_Karaokay.EditEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Wpf_Karaokay"
        mc:Ignorable="d"
        Background="#FFF6F7"
        WindowStartupLocation="CenterScreen"
        Title="EditEmployee" Height="500" Width="800"
        Name="editEmployee"
        DataContext="{StaticResource EditEmployeeVM}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="104*"/>
            <ColumnDefinition Width="213*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>
        <Label Content="EDIT EMPLOYEE" Foreground="Black" FontSize="24" FontWeight="Black" HorizontalAlignment="Left" Margin="94,10,0,418" Grid.Column="1"/>
        <Button x:Name="insertBtn" Command="{Binding InsertCommand}" BorderBrush="Black" BorderThickness="2" materialDesign:ButtonAssist.CornerRadius="20" Content="INSERT"  Background="#47a992" Foreground="Black" HorizontalAlignment="Left" Margin="97,381,0,0" VerticalAlignment="Top" Height="39" Width="96" FontWeight="Bold" FontSize="15"/>
        <Button x:Name="updateBtn" Command="{Binding UpdateCommand}" BorderBrush="Black" BorderThickness="2" materialDesign:ButtonAssist.CornerRadius="20" Content="UPDATE" Background="#FEBD25" Foreground="Black" HorizontalAlignment="Left" Margin="57,381,0,0" VerticalAlignment="Top" Height="39" Width="96" FontWeight="Bold" FontSize="15" Grid.Column="1"/>
        <Button x:Name="deleteBtn" Command="{Binding DeleteCommand}" BorderBrush="Black" BorderThickness="2" materialDesign:ButtonAssist.CornerRadius="20" Content="DELETE" Background="#FC4F41" Foreground="Black" HorizontalAlignment="Left" Margin="229,381,0,0" VerticalAlignment="Top" Height="39" Width="96" FontWeight="Bold" FontSize="15" Grid.Column="1"/>
        <Button x:Name="clearBtn" BorderBrush="Black" BorderThickness="2" materialDesign:ButtonAssist.CornerRadius="20" Content="CLEAR" Foreground="Black" HorizontalAlignment="Left" Margin="389,381,0,0" VerticalAlignment="Top" Height="39" Width="98" FontWeight="Bold" FontSize="15" Click="clearBtn_Click" RenderTransformOrigin="0.526,-0.625" Grid.Column="1" Grid.ColumnSpan="2"/>

        <DataGrid Name="dataGrid" ItemsSource="{Binding Employees}" Background="White" SelectionMode="Extended" BorderBrush="Black" BorderThickness="2"  AutoGenerateColumns="False" Margin="125,85,26,131" Grid.Column="1" Grid.ColumnSpan="2" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Employee ID" Binding="{Binding EmpId}" />
                <DataGridTextColumn Header="Name" Binding="{Binding EmpName}" />
                <DataGridTextColumn Header="Citizen ID" Binding="{Binding CCCD}" />
                <DataGridTextColumn Header="Phone Number" Binding="{Binding EmpPhone}" />
                <DataGridTextColumn Header="Date of Birth" Binding="{Binding BirthDate}" />
                <DataGridTextColumn Header="Place of Origin" Binding="{Binding PlaceOfOrigin}" />
                <!-- Add more columns for other properties as needed -->
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="txtEmpID" materialDesign:HintAssist.Hint=" Enter Employee ID" Background="White" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Margin="129,91,0,0" TextWrapping="Wrap" Text="{Binding EmpID}" VerticalAlignment="Top" Width="185" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtEmpName" materialDesign:HintAssist.Hint=" Enter Name" Background="White" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Margin="129,131,0,0" TextWrapping="Wrap" Text="{Binding EmpName}" VerticalAlignment="Top" Width="185" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtCitizenID" materialDesign:HintAssist.Hint=" Enter Citizen ID" Background="White" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Margin="129,171,0,0" TextWrapping="Wrap" Text="{Binding CitizenID}" VerticalAlignment="Top" Width="185" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtEmpPhone" materialDesign:HintAssist.Hint=" Enter Phone Number" Background="White" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Margin="129,211,0,0" TextWrapping="Wrap" Text="{Binding EmpPhone}" VerticalAlignment="Top" Width="185" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtBirthDate" materialDesign:HintAssist.Hint=" Enter Birthdate" Background="White" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Margin="129,251,0,0" TextWrapping="Wrap" Text="{Binding BirthDate}" VerticalAlignment="Top" Width="185" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtPlaceOfOrigin" materialDesign:HintAssist.Hint=" Enter Place of Origin" Background="White" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Margin="129,291,0,0" TextWrapping="Wrap" Text="{Binding PlaceOfOrigin}" VerticalAlignment="Top" Width="185" Grid.ColumnSpan="2"/>



        <Label Content="Employee ID" Foreground="Black" FontWeight="Bold" FontSize="13"  HorizontalAlignment="Left" Margin="23,92,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.528,0.119"/>
        <Label Content="Name" Foreground="Black" FontWeight="Bold" FontSize="13" HorizontalAlignment="Left" Margin="23,132,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.686,0.141"/>
        <Label Content="Citizen ID" Foreground="Black" FontWeight="Bold" FontSize="13" HorizontalAlignment="Left" Margin="23,172,0,0" VerticalAlignment="Top"/>
        <Label Content="Phone Number" Foreground="Black" FontWeight="Bold" FontSize="13" HorizontalAlignment="Left" Margin="23,212,0,0" VerticalAlignment="Top"/>
        <Label Content="Date of Birth" Foreground="Black" FontWeight="Bold" FontSize="13" HorizontalAlignment="Left" Margin="23,252,0,0" VerticalAlignment="Top"/>
        <Label Content="Place of Origin" Foreground="Black" FontWeight="Bold" FontSize="13" HorizontalAlignment="Left" Margin="23,292,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" Foreground="Black" FontWeight="Bold" FontSize="13" HorizontalAlignment="Left" Margin="23,335,0,0" VerticalAlignment="Top"/>
        <Button Content="BACK" FontSize="14" FontWeight="Bold" BorderBrush="Black" Foreground="Black" BorderThickness="2" Background="#FC4F41" 
                materialDesign:ButtonAssist.CornerRadius="20" Margin="9,10,121,0" VerticalAlignment="Top" Height="30" Command="{Binding DataContext.BackCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                        CommandParameter="{Binding}"/>
        <TextBox x:Name="txtPlaceOfOrigin_Copy" materialDesign:HintAssist.Hint=" Enter password or empty " Background="White" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Margin="129,334,0,0" TextWrapping="Wrap" Text="{Binding PlaceOfOrigin}" VerticalAlignment="Top" Width="185" Grid.ColumnSpan="2"/>
        


    </Grid>
</Window>
